<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mentee_layout">

    <EditText
        android:id="@+id/mentee_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Fullname"
        android:inputType="textPersonName" >
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mentee_username"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Username" />

    <EditText
        android:id="@+id/mentee_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/mentee_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mentee_highschool"
        android:hint="Enter Highschool"/>
    <Spinner
        android:id="@+id/mentee_year_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mentee_hometown"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Hometown" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LETS MAKE A GOAL!"/>
    <Spinner
        android:id="@+id/mentee_college_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/mentee_major_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/mentee_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="registerAccount"
        android:text="Register" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What do you need help with?"/>

</LinearLayout>